{
	"compilerOptions": {
		"baseUrl": ".",
		"inlineSourceMap": true,
		"inlineSources": true,
		"resolveJsonModule": true,
		"allowSyntheticDefaultImports": true,
		"module": "ESNext",
		"target": "ES6",
		"allowJs": true,
		"noImplicitAny": true,
		"moduleResolution": "node",
		"importHelpers": true,
		"isolatedModules": true,
		"paths": {
			"src": ["src/*"]
		},
		"lib": ["DOM", "ES5"]
	},
	"include": ["**/*.ts"]
}
